<script>
    $(function() {
        $.getJSON('/api/get_article_by_id/'+'<%= articleId %>', updateTable);
    });
    function updateTable(data) {
        var output= '';
            console.log(data);
            if(data.status == 'error'){
                output += 'This article does not exist';
            }
            else {
                output += '<h1>'+data.title+'</h1>';
                output += '<a style="color:#000;" href="'+data.url+'">View Original</a>'
                output += '<h3 style="color: #777">'+data.summary+'</h3>';
            }
        $('.article').html(output);
    }
</script>

